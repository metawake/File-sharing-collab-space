# Database
DATABASE_URL=postgresql://dataroom:dataroom@localhost:5432/dataroom

# Google OAuth (Get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Application
WEB_BASE_URL=http://localhost:3000
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Storage
STORAGE_DIR=./storage

# Development (set to false in production)
ALLOW_EMAIL_PARAM=false

# Demo seeding (set to true to create public demo room)
DEMO_SEED=false
SEED_ROOM_NAME=Demo Room
